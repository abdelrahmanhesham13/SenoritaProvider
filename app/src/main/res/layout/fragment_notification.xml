<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/notifications_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="10dp"
            tools:context=".views.NotificationFragmentWithoutViewModel"
            tools:listitem="@layout/list_notification_item" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:id="@+id/notification_progress"
            android:layout_height="wrap_content"
            android:theme="@style/ProgressStyle"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</layout>